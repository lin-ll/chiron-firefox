{
  "name": "Firefoxium Dictionary",
  "short_name":"Firefoxium",
  "description": "Look up Latin or Greek words directly in your webpage.",
  "version": "1.0.1",
  "icons": {
    "16": "paideia-favicon.png",
    "48": "paideia-favicon.png",
    "128": "paideia-favicon.png"
  },
  "homepage_url": "http://www.paideiainstitute.org/chromium",
  "permissions": [
        "tabs",
        "http://*/",
        "https://*/"
  ],
  "applications": {
    "gecko": {
      "id": "firefoxium@paideiainstitute.org",
      "strict_min_version": "45.0"
    }
  },
  "web_accessible_resources": ["contentscripts/greek_defs.json", "paideia.png"],
  "browser_action": {
    "default_icon": {
      "19": "paideia-favicon.png",
      "38": "paideia-favicon.png"
    },
    "default_title": "Firefoxium Dictionary",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches":["<all_urls>"],
    "css":["contentscripts/my.css"],
    "js":["jquery-1.11.1.min.js", "contentscripts/paideiafy.js"]
  }],
  "manifest_version": 2
}
